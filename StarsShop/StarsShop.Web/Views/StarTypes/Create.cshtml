@model StarsShop.Web.Models.StarType

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create" method="post">
    <div class="border p-3">
        <div class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Star Type</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="TypeName" class="control-label"></label>
                    </div>
                    <div class="col-8">

                        <input asp-for="TypeName" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-100"  asp-action="Index">Back to list</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">

            </div>
        </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
